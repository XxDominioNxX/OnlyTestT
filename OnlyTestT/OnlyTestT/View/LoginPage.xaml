<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlyTestT.View.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Label Text="Авторизация" FontSize="35" TextColor="DarkSlateGray"></Label>

            <Entry Placeholder ="Login" Margin="0,40,0,0"></Entry>
            <Entry Placeholder ="Password" IsPassword="True"></Entry>
            <Button VerticalOptions="Center" Text="Login" Clicked ="Loggin" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>